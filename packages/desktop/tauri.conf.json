{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tokyo",
  "version": "0.1.0",
  "identifier": "com.tokyo.dev",
  "build": {
    "beforeDevCommand": "task ui:dev",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "task ui:build",
    "frontendDist": "./dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "transparent": true,
        "titleBarStyle": "Overlay",
        "decorations": true,
        "hiddenTitle": true,
        "fullscreen": false,
        "resizable": true,
        "title": "TOKYO",
        "width": 1400,
        "height": 1200,
        "trafficLightPosition": { "x": 18, "y": 20 }
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
